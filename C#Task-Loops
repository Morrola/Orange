// Q4)/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

int n, sum = 0;

           
Console.Write("Enter any number 1-100  to print odd numbers and their sumations : ");
n = int.Parse(Console.ReadLine());
Console.WriteLine("\nThe odd numbers are:");
int count = 0;  

for (int i = 1; i <= 100; i++)
{
    if (i % 2 != 0)  
    {
        Console.Write(i + " ");
        sum += i;  
        count++;

        if (count == n) 
            break;
    }
}

Console.WriteLine("\n\nThe Sum of odd numbers is: " + sum);

// Q5)
int rows;
Console.Write("Enter the number of rows: ");
rows = int.Parse(Console.ReadLine());

for (int i = 1; i <= rows; i++)
{
   
    for (int j = 1; j <= rows - i; j++)
    {
        Console.Write(" ");
    }

   
    for (int k = 1; k <= i; k++)
    {
        Console.Write("*");
    }

    Console.WriteLine();
}

// Q6)

int rows , number=1;
Console.Write("Enter the number of rows: ");
rows = int.Parse(Console.ReadLine());

for (int i = 1; i <= rows; i++)
{
   
    for (int j = 1; j <= rows - i; j++)
    {
        Console.Write(" ");
    }

   
    for (int k = 1; k <= i; k++)
    {
        Console.Write(number + " ");
        number++;
    }

    Console.WriteLine();
}
